@using System.Configuration;

<style>
    #plot-site-name {
        color: white;
    }

    #location-icon {
        color: white;
        font-size: 18px;
        padding-right: 10px;
    }

    .main-body-container {
        width: 70%;
        margin: auto;
    }

    @@media only screen and (max-width: 1300px) {
        .main-body-container {
            width: 95%;
        }
    }



    .login-info-banner {
        background-color: var(--light-light-grey);
        color: var(--dark-dark-grey);
        padding: 5px;
        padding-right: 20px;
        text-align: right;
        width: 100%;
        border-bottom: 1px solid var(--light-grey);
    }

    .company-logo {
        cursor: pointer;
        height: 35px;
        width: auto;
        margin-right: 10px !important;
    }
</style>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Build Quality Checklist</title>

    <link rel="stylesheet" href="~/Content/datatables.css" />
    <link rel="stylesheet" href="~/Content/Site.css"/>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/floating-totop-button.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.14.0/css/all.css">
    <link rel="stylesheet" href="~/Content/tippy.css" />

    <script type="text/javascript">
        var relativePath = '@ConfigurationManager.AppSettings["ProjectRelativePath"].ToString()';
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/datatables")
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="https://kit.fontawesome.com/c4ef1f0015.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/shared-scripts.js"></script>
    <script src="~/Scripts/signature-pad.js"></script>
    <script src="~/Scripts/floating-totop-button.min.js"></script>
</head>
<body>
    <div id="loader">
        <div class="text-center">
            <i class="fas fa-circle-notch fa-spin"></i>
            <br />
            <div class="text-center">
                <span class="spinner-text">Loading...</span>
            </div>
        </div>
    </div>

    <nav class="navbar navbar-expand-sm navbar-dark bg-croudace-green">
        <img class="company-logo" src="~/Img/CroudaceHomes_White.png" onclick="window.location.href='@Url.Action("ChooseSite","Sites")'" />
        <a class="navbar-brand" href="@Url.Action("Index","Home")">Build Quality Checklist</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                @*<li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("Index","Home")">User Manual</a>
                </li>*@
                <li class="nav-item active">
                    <a class="nav-link clickable" onclick="window.open('https://extranet.croudace.co.uk')">Back to Extranet</a>
                </li>

            </ul>
        </div>
        @*<span id="location-icon"></span>
            <div id="plot-site-name"></div>*@
    </nav>
    <div class="login-info-banner">
        Signed in as @User.Identity.Name
    </div>
    <div class="main-body-container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Build Quality Checklist</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>


